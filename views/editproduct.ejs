<%- include('./partials/header') %>

    <div class="min-h-screen flex flex-col">



        <main class="w-full bg-white p-8 shadow m-4 my-2 flex flex-col items-center">
            <h2 class="text-xl font-bold mb-4">Edit Your Product</h2>
            <form class="w-full max-w-md" autocomplete="off" action="/owners/editproduct/<%= product._id %>"
                method="post">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <div class="w-1/2 flex justify-center items-center bg-white">
                            <img class="h-full w-full object-contain"
                                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                alt="<%= product.name %>">
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        Product Name: <input name="name" type="text" value="<%=product.name%>"
                            class="border p-2 rounded w-full">

                        Product Price:<input name="price" type="text" value="<%=product.price%>"
                            class="border p-2 rounded w-full">

                        Discount Price:<input name="discount" type="text" value="<%=product.discount%>"
                            class="border p-2 rounded w-full">
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        Background Color: <input name="bgcolor" type="text" value="<%=product.bgcolor%>"
                            class="border p-2 rounded w-full">
                        Panel Color: <input name="panelcolor" type="text" value="<%=product.panelcolor%>"
                            class="border p-2 rounded w-full">
                        Text Color: <input name="textcolor" type="text" value="<%=product.textcolor%>"
                            class="border p-2 rounded w-full">
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                    value="Update Product Details">
            </form>
        </main>
    </div>
    </div>
    <%- include('./partials/footer') %>