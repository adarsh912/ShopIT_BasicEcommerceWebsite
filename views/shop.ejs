<%- include('./partials/header') %>

    <% if(success.length> 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>

            <div class="w-full h-screen flex items-start px-20 py-20">
                <% if (products.length===0) { %>
                    <!-- Show message when no products are available -->
                    <div class="w-full flex justify-center items-center text-center">
                        <h2 class="text-2xl font-bold">Sorry, we are currently not available. Please come back later.
                        </h2>
                    </div>
                    <% } else { %>
                        <div class="w-screen h-screen flex flex-wrap items-start px-20 py-20 gap-10 overflow-auto">
                            <div class="flex items-start gap-5 flex-wrap">
                                <% products.forEach(function(product) { %>
                                    <div class="w-60">
                                        <div
                                            class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                                            <img class="h-full"
                                                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                                alt="">
                                        </div>
                                        <div
                                            class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                            <div>
                                                <h3 class="text-lg truncate w-full">
                                                    <%= product.name %>
                                                </h3>
                                                <h4>â‚¹ <%= product.price %>
                                                </h4>
                                            </div>
                                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                                href="/addtocart/<%= product.id %>">
                                                <i class="ri-add-line"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>
            </div>

            <%- include('./partials/footer') %>