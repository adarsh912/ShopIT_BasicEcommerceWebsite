<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
    <div class="flex flex-wrap gap-10 flex-grow overflow-auto">
        <% user.cart.forEach(product => { %>
            <div class="h-[30rem] w-[12rem] rounded-md overflow-hidden flex flex-col">
                <div class="flex-grow flex justify-center items-center bg-[<%= product.bgcolor %>]">
                    <img class="h-full w-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="" style="object-fit: contain;">
                </div>

                <div class="flex flex-col justify-between px-5 py-4 bg-[<%= product.panelcolor %>]">
                    <h3 class="text-lg sm:text-2xl truncate w-full overflow-hidden text-ellipsis">
                        <%= product.name %>
                    </h3>
                    
                    <div class="flex items-center gap-1 mt-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>

                <div class="flex items-center justify-between px-5 py-3 bg-[<%= product.textcolor %>]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= product.price %></h2>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="w-[30%] h-full bg-white shadow-md p-5 overflow-y-auto">
        <h3 class="text-xl font-semibold">Price Breakdown</h3>
        <div class="mt-5">
            <div class="flex justify-between mt-2">
                <h4 class="w-1/2">Total MRP</h4>
                <h4>₹ <%= totalMRP %></h4>
            </div>
            <div class="flex justify-between mt-2">
                <h4 class="w-1/2">Discount on MRP</h4>
                <h4>₹ <%= discount %></h4>
            </div>
            <div class="flex justify-between mt-2">
                <h4 class="w-1/2">Platform Fee</h4>
                <h4>₹ <%= platformFee %></h4>
            </div>
            <div class="flex justify-between mt-2">
                <h4 class="w-1/2">Shipping Fee</h4>
                <h4><%= shippingFee === 0 ? 'FREE' : `₹ ${shippingFee}` %></h4>
            </div>
        </div>
        <div class="w-full h-[1px] bg-black mt-10"></div>
        <div class="flex justify-between mt-5">
            <h3 class="text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">₹ <%= (totalMRP - discount + platformFee + shippingFee) %></h3>
        </div>
        <form action=""></form>
    </div>
    
</div>
<%- include('./partials/footer') %>
